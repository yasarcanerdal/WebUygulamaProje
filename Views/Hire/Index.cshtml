@model List<Hire>

@if (TempData["basarili"] != null)
{
	<h4 style="color:dodgerblue">@TempData["basarili"]</h4>
}

<div class="container">
	<div class="row pt-3 pb-4">
		<div>
			<h1>Kitap Kiralamaları</h1>
		</div>
	</div>

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					ID
				</th>
				<th>
					Müşteri ID
				</th>
				<th>
					Kitap ID
				</th>

				<th>
				</th>
				<th>
				</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var hire in Model)
			{
				<tr>
					<td>@hire.Id</td>
					<td>@hire.CustomerId</td>
					<td>@hire.Book.BookName</td>

					<td>
						<a asp-controller="Hire" asp-action="AddUpdate" asp-route-id="@hire.Id" type="button" class="btn btn-success" style="width:100px">Kiralama Güncelle</a>
					</td>
					<td>
						<a asp-controller="Hire" asp-action="Delete" asp-route-id="@hire.Id" type="button" class="btn btn-danger" style="width:100px">Kiralama Sil</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="Hire" asp-action="AddUpdate" class="btn btn-lg btn-primary" type="button">Yeni Kiralama Kaydı Oluştur</a>
		</div>
	</div>

</div>
