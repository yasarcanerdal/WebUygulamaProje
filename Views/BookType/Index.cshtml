@model List<BookType>

@if (TempData["basarili"] != null)
{
	<h4 style="color:dodgerblue">@TempData["basarili"]</h4>
}

<div class="container">
	<div class="row pt-3 pb-4">
		<div>
			<h1>Kitap Türleri</h1>
		</div>
	</div>

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					ID
				</th>
				<th>
					Kitap Türü
				</th>
				<th>

				</th>
				<th>

				</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var BookType in Model)
			{
				<tr>
					<td>@BookType.Id</td>
					<td>@BookType.Name</td>
					<td>
						<a asp-controller="BookType" asp-action="Update" asp-route-id="@BookType.Id" type="button" class="btn btn-success" style="width:100px">Güncelle</a>
					</td>
					<td>
						<a asp-controller="BookType" asp-action="Delete" asp-route-id="@BookType.Id" type="button" class="btn btn-danger" style="width:100px">Sil</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="BookType" asp-action="Add" class="btn btn-lg btn-primary" type="button">Yeni Kitap Türü Oluştur</a>
		</div>
	</div>

</div>
